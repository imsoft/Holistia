{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/challenge-checkin-reminders",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/event-reminders",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/event-post-followup",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/event-waitlist-no-spot",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/appointment-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/sync-google-calendar",
      "schedule": "*/30 * * * *"
    }
  ],
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "src/app/**/*.tsx": {
      "maxDuration": 30
    },
    "app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), browsing-topics=()"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "holistia.io"
        }
      ],
      "destination": "https://www.holistia.io/:path*",
      "permanent": true
    }
  ]
}
